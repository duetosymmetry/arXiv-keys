{
  "manifest_version": 3,

  "name": "arXiv keys",
  "description": "Adds keyboard navigation keys to the arXiv.",
  "version": "0.9.7",

  "icons": {  "48": "icon48.png",
             "128": "icon128.png" },

  "content_scripts": [
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "css":     ["jquery-ui.min.css","arXiv-keys.css"],
      "js":      ["jquery-3.3.1.min.js","jquery-ui.min.js",
                  "categories.js","goto-box.js","arXiv-keys.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/abs/*"],
      "js":      ["abs.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/list*"],
      "js":      ["list-find-items.js","list.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/find*","*://*/a/*"],
      "js":      ["list-find-items.js","find.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/search*"],
      "js":      ["search.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/catchup*", "*://*/refs*", "*://*/cits*"],
      "js":      ["list-find-items.js"]
    }
  ]
}
