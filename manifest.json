{
  "manifest_version": 2,

  "name": "arXiv keys",
  "description": "Adds keyboard navigation keys to the arXiv.",
  "version": "0.9.2.11",

  "icons": {  "48": "icon48.png",
             "128": "icon128.png" },

  "content_scripts": [
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "css":     ["blitzer.css","arXiv-keys.css"],
      "js":      ["jquery-2.0.0.min.js","jquery-ui-git.js",
                  "categories.js","goto-box.js","arXiv-keys.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/abs/*"],
      "js":      ["abs.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/list*"],
      "js":      ["list-find-items.js","list.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/find*","*://*/a/*"],
      "js":      ["list-find-items.js","find.js"]
    },
    {
      "matches": ["*://arxiv.org/*",
                  "*://*.arxiv.org/*",
                  "*://arxiv-web1.library.cornell.edu/*",
                  "*://arxiv-web2.library.cornell.edu/*",
                  "*://arxiv-web3.library.cornell.edu/*",
                  "*://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "include_globs": ["*://*/catchup*"],
      "js":      ["list-find-items.js"]
    }
  ]
}
