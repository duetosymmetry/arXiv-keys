{
  "manifest_version": 2,

  "name": "arXiv keys",
  "description": "Adds navigation keys to the arXiv.",
  "version": "0.9.0",

  "icons": {  "48": "icon48.png",
             "128": "icon128.png" },

  "content_scripts": [
    {
      "matches": ["http://arxiv.org/*",
                  "https://arxiv.org/*",
                  "http://*.arxiv.org/*",
                  "https://*.arxiv.org/*",
                  "http://xxx.lanl.gov/*",
                  "https://xxx.lanl.gov/*"],
      "exclude_matches": ["*://*/*.pdf"],
      "css":     ["arXiv-keys.css"],
      "js":      ["arXiv-keys.js"]
    }
  ]
}
